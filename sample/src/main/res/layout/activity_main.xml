<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:padding="@dimen/activity_horizontal_margin"
      >

    <!-- Basic -->

    <TextView
        android:layout_marginTop="0dp"
        android:text="@string/basic"
        style="@style/SampleHeader"
        />

    <Button
        android:id="@+id/basic"
        android:text="@string/basic"
        style="@style/SampleButton"
        />

    <Button
        android:id="@+id/basic_titled"
        android:text="@string/basic_title"
        style="@style/SampleButton"
        />

    <Button
        android:id="@+id/basic_buttons"
        android:text="@string/basic_buttons"
        style="@style/SampleButton"
        />

    <Button
        android:id="@+id/basic_stacked_buttons"
        android:text="@string/basic_stacked_buttons"
        style="@style/SampleButton"
        />

    <Button
        android:id="@+id/basic_titled_buttons"
        android:text="@string/basic_title_buttons"
        style="@style/SampleButton"
        />

    <Button
        android:id="@+id/basic_html_content"
        android:text="@string/basic_html_content"
        style="@style/SampleButton"
        />

    <Button
        android:id="@+id/basic_long_titled_buttons"
        android:text="@string/basic_long_title_buttons"
        style="@style/SampleButton"
        />

    <Button
        android:id="@+id/basic_icon"
        android:text="@string/basic_icon_buttons"
        style="@style/SampleButton"
        />

    <Button
        android:id="@+id/basic_checkbox_titled_buttons"
        android:text="@string/basic_title_checkbox_buttons"
        style="@style/SampleButton"
        />

    <!-- Basic Lists -->

    <TextView
        android:text="@string/list"
        style="@style/SampleHeader"
        />

    <Button
        android:id="@+id/list"
        android:text="@string/list"
        style="@style/SampleButton"
        />

    <Button
        android:id="@+id/list_buttons"
        android:text="@string/list_buttons"
        style="@style/SampleButton"
        />

    <Button
        android:id="@+id/list_dont_wait_positive"
        android:text="@string/list_don_t_wait_for_positive"
        style="@style/SampleButton"
        />

    <Button
        android:id="@+id/list_titled"
        android:text="@string/list_title"
        style="@style/SampleButton"
        />

    <Button
        android:id="@+id/list_titled_buttons"
        android:text="@string/list_title_buttons"
        style="@style/SampleButton"
        />

    <Button
        android:id="@+id/list_titled_message_buttons"
        android:text="@string/list_title_message_buttons"
        style="@style/SampleButton"
        />

    <Button
        android:id="@+id/list_long"
        android:text="@string/list_long"
        style="@style/SampleButton"
        />

    <Button
        android:id="@+id/list_long_titled"
        android:text="@string/list_long_title"
        style="@style/SampleButton"
        />

    <Button
        android:id="@+id/list_checkPrompt_buttons"
        android:text="@string/list_title_checkbox_prompt_buttons"
        style="@style/SampleButton"
        />

    <!-- Single Choice Lists -->

    <TextView
        android:text="@string/single_choice_lists"
        style="@style/SampleHeader"
        />

    <Button
        android:id="@+id/single_choice_titled"
        android:text="@string/single_choice_title"
        style="@style/SampleButton"
        />

    <Button
        android:id="@+id/single_choice_buttons_titled"
        android:text="@string/single_choice_title_buttons"
        style="@style/SampleButton"
        />

    <Button
        android:id="@+id/single_choice_long_items"
        android:text="@string/single_choice_long_items"
        style="@style/SampleButton"
        />

    <Button
        android:id="@+id/single_choice_disabled_items"
        android:text="@string/single_choice_disabled_items"
        style="@style/SampleButton"
        />

    <Button
        android:id="@+id/single_choice_custom_radio_color"
        android:text="@string/single_choice_custom_radio_color"
        style="@style/SampleButton"
        />

