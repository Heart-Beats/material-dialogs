    <TextView
        android:text="@string/action_buttons"
        style="@style/SampleHeader"
        />

    <Button
        android:id="@+id/buttons_stacked"
        android:text="@string/stacked_buttons"
        style="@style/SampleButton"
        />

    <Button
        android:id="@+id/buttons_stacked_checkboxPrompt"
        android:text="@string/stacked_buttons_checkbox_prompt"
        style="@style/SampleButton"
        />

    <Button
        android:id="@+id/buttons_neutral"
        android:text="@string/neutral_button"
        style="@style/SampleButton"
        />

    <Button
        android:id="@+id/buttons_callbacks"
        android:text="@string/button_callbacks"
        style="@style/SampleButton"
        />

    <TextView
        android:text="@string/miscellaneous"
        style="@style/SampleHeader"
        />

    <Button
        android:id="@+id/misc_dialog_callbacks"
        android:text="@string/dialog_callbacks"
        style="@style/SampleButton"
        />

    <!-- Input -->

    <TextView
        android:text="@string/text_input"
        style="@style/SampleHeader"
        />

    <Button
        android:id="@+id/input"
        android:text="@string/input"
        style="@style/SampleButton"
        />

    <Button
        android:id="@+id/input_message"
        android:text="@string/input_message"
        style="@style/SampleButton"
        />

    <Button
        android:id="@+id/input_counter"
        android:text="@string/input_counter"
        style="@style/SampleButton"
        />

    <Button
        android:id="@+id/input_check_prompt"
        android:text="@string/input_checkbox_prompt"
        style="@style/SampleButton"
        />

    <!-- Custom Views -->

    <TextView
        android:text="@string/custom_views"
        style="@style/SampleHeader"
        />

    <Button
        android:id="@+id/custom_view"
        android:text="@string/custom_view"
        style="@style/SampleButton"
        />

    <Button
        android:id="@+id/custom_view_webview"
        android:text="@string/custom_view_web_view"
        style="@style/SampleButton"
        />

    <!-- Color Chooser -->

    <TextView
        android:text="@string/color"
        style="@style/SampleHeader"
        />

    <Button
