    <TextView
        android:text="@string/multiple_choice_lists"
        style="@style/SampleHeader"
        />

    <Button
        android:id="@+id/multiple_choice"
        android:text="@string/multiple_choice"
        style="@style/SampleButton"
        />

    <Button
        android:id="@+id/multiple_choice_buttons"
        android:text="@string/multiple_choice_buttons"
        style="@style/SampleButton"
        />

    <Button
        android:id="@+id/multiple_choice_long_items"
        android:text="@string/multiple_choice_long_items"
        style="@style/SampleButton"
        />

    <Button
        android:id="@+id/multiple_choice_disabled_items"
        android:text="@string/multiple_choice_disabled_items"
        style="@style/SampleButton"
