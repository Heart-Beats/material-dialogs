        style="@style/SampleHeader"
        />

    <Button
        android:id="@+id/file_chooser"
        android:text="@string/file_chooser"
        style="@style/SampleButton"
        />

    <Button
        android:id="@+id/file_chooser_buttons"
        android:text="@string/file_chooser_buttons"
        style="@style/SampleButton"
        />

    <Button
        android:id="@+id/file_chooser_filter"
        android:text="@string/file_chooser_filter"
        style="@style/SampleButton"
        />

    <!-- Folder Choosers -->

    <TextView
        android:text="@string/folder_choosers"
        style="@style/SampleHeader"
        />

    <Button
        android:id="@+id/folder_chooser_buttons"
        android:text="@string/folder_chooser_buttons"
        style="@style/SampleButton"
        />

    <Button
        android:id="@+id/folder_chooser_filter"
        android:text="@string/folder_chooser_filter"
        style="@style/SampleButton"
        />

    <!-- DateTime Pickers -->

    <TextView
        android:text="@string/datetime_pickers"
        style="@style/SampleHeader"
        />

    <Button
        android:id="@+id/date_picker"
        android:text="@string/date_picker"
        style="@style/SampleButton"
        />

    <Button
        android:id="@+id/time_picker"
        android:text="@string/time_picker"
        style="@style/SampleButton"
        />

    <Button
        android:id="@+id/datetime_picker"
        android:text="@string/datetime_picker"
        style="@style/SampleButton"
        />

    <!-- Bottom Sheets -->

    <TextView
        android:text="@string/bottom_sheets"
        style="@style/SampleHeader"
        />

    <Button
        android:id="@+id/bottomsheet_info"
        android:text="@string/informational"
        style="@style/SampleButton"
        />

    <Button
        android:id="@+id/bottomsheet_list"
        android:text="@string/item_list"
        style="@style/SampleButton"
        />

    <Button
        android:id="@+id/bottomsheet_grid"
        android:text="@string/item_grid"
        style="@style/SampleButton"
        />

    <Button
        android:id="@+id/bottomsheet_customView"
        android:text="@string/bottomsheet_custom_view"
        style="@style/SampleButton"
        />

    <Button
        android:id="@+id/bottomsheet_colorPicker"
